    <script>
        // ‚ö° JS ANIMATION DRIVER ‚ö°
        document.addEventListener('DOMContentLoaded', () => {
            const animatedElements = document.querySelectorAll('.animated');
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('in-view'); // Add a class to trigger animation
                        // Animation already defined in CSS triggered by this class implicitly or directly
                        observer.unobserve(entry.target); // Stop observing once animated
                    }
                });
            }, {
                threshold: 0.1 // Trigger when 10% of the element is visible
            });

            animatedElements.forEach(element => {
                observer.observe(element);
            });

            // Optional: Typewriter effect for code blocks - needs dedicated handling if implemented
            // This simple version just triggers the CSS fade/slide in
        });

        // More advanced Typewriter for PRE tags (optional)
         // Requires replacing innerHTML initially with empty and adding characters
        // Or if already in HTML, progressively revealing

        document.addEventListener('DOMContentLoaded', () => {
            const codeBlocks = document.querySelectorAll('pre code');
            codeBlocks.forEach(code => {
                const originalText = code.textContent.trim();
                code.textContent = ''; // Clear original text
                code.setAttribute('data-text', originalText); // Store original text

                 let charIndex = 0;
                function type() {
                    const textToType = code.getAttribute('data-text');
                    if (charIndex < textToType.length) {
                         // Handle line breaks if necessary
                         if (textToType[charIndex] === '\n') {
                              code.innerHTML += '<br>'; // Add line break tag
                         } else {
                            code.textContent += textToType[charIndex];
                         }
                         charIndex++;
                         requestAnimationFrame(type); // Use requestAnimationFrame for smooth typing
                    }
                }
                // Trigger typewriter when the code block comes into view
                 const codeObserver = new IntersectionObserver((entries) => {
                     entries.forEach(entry => {
                         if (entry.isIntersecting) {
                             type();
                             codeObserver.unobserve(entry.target); // Stop observing
                         }
                     });
                 }, {
                    threshold: 0.5 // Trigger when 50% is visible
                 });

                 codeObserver.observe(code.parentElement); // Observe the parent <pre> tag
            });
             // Removed original simple animation trigger for LIs if using complex ones

            // More granular animation observer for all list items
            const listItems = document.querySelectorAll('li');
            const liObserver = new IntersectionObserver((entries) => {
                 entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = 1;
                         entry.target.style.transform = 'translateX(0)';
                         // Delay is already applied via CSS variable on animation-delay
                        liObserver.unobserve(entry.target);
                    }
                 });
            }, {
                 threshold: 0.1
            });
             listItems.forEach(li => {
                liObserver.observe(li);
            });


        });


    </script>
</body>
</html>
